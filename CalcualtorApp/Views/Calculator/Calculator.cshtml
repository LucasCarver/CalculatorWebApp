
@{
    ViewData["Title"] = "Calculator";
}

@model Calculator

<h1>Calculator</h1>

@*Calculator Form*@
<form action="Calculate" method="post">
    <input type="number" name="Number1" />
    <input type="radio" id="+" name="Operator" value="+" />
    <label for="+">+</label>
    <input type="radio" id="-" name="Operator" value="-" />
    <label for="-">-</label>
    <input type="radio" id="*" name="Operator" value="*" />
    <label for="*">*</label>
    <input type="radio" id="/" name="Operator" value="/" />
    <label for="/">/</label>
    <input type="number" name="Number2" />

    <input type="submit" value="Calculate" />
</form>

@*Calculate Result*@

@if (Model != null)
{
    <p>@Model.Number1 @Model.Operator @Model.Number2 = @Model.Result</p>
}